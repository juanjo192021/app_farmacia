<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C348B"
    android:minHeight="50dp"
    tools:context=".view.ui.product.addProductFragment" >

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#2C348B"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Producto"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SKU:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/txtRegisterSKU"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nombre:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/txtRegisterNombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:paddingLeft="20dp"
                android:inputType="text" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Descripcion:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/txtRegisterDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:paddingLeft="20dp"
                android:inputType="text" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Precio:"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/txtRegisterPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:paddingLeft="20dp"
                android:inputType="text" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Brand:"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/spinnerRegisterBrand"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Categoria:"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/spinnerRegisterCategory"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Imagen:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/txtRegisterImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_login"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:paddingLeft="20dp"
                android:inputType="text" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnRegisterProduct"
            android:layout_width="145dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/secondary"
            android:text="Registrar"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</FrameLayout>