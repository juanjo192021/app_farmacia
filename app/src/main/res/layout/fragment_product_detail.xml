<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameDetailProduct"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductDetailFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/common_padding_min"
        android:padding="16dp"
        android:animateLayoutChanges="true">

        <!-- ImageView para la imagen del producto -->
        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="@dimen/image_prductDetail_map_size"
            android:layout_height="@dimen/image_prductDetail_map_size"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:src="@drawable/button_menu"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_alignParentLeft="true"/>

        <!-- TextView para el nombre del producto -->
        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"/>

        <!-- Botón para agregar al carrito o comprar -->

        <!-- Línea divisoria debajo de la descripción -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/editStockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajustar Stock"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/circular_border"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/priceLayout">

                <TextView
                    android:id="@+id/PriceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/productPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="end" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/stockLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/priceLayout">

                <!-- TextView para "Stock" alineado a la izquierda -->
                <TextView
                    android:id="@+id/stockText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stock"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <!-- TextView para la cantidad de stock alineado a la derecha -->
                <TextView
                    android:id="@+id/productStockTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>



        <!-- TextView para la marca -->
        <TextView
            android:id="@+id/productBrandTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la marca"
            android:textSize="16sp"
            android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/productNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- TextView para la categoría -->
        <TextView
            android:id="@+id/productCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la categoría"
            android:textSize="16sp"
            android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/productBrandTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="12dp" />

        <!-- Línea divisoria debajo de la categoría -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            app:layout_constraintTop_toBottomOf="@id/productCategoryTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Descripción del producto -->
        <TextView
            android:id="@+id/productDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del producto. Este es un ejemplo de una breve descripción del producto que resalta sus características."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
</FrameLayout>